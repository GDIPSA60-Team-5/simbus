<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/transparent">

    <!-- Map Card -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/map_border"
        android:clipToPadding="true"
        android:clipToOutline="true"
        android:elevation="4dp">
        <ImageView
            android:id="@+id/routeStaticMapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="@string/route_map" />
    </FrameLayout>

    <!-- Locations -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:weightSum="2">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/glass_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/startLocationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="Start Location"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@drawable/glass_background"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/endLocationTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|end"
                    android:text="End Location"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="12dp"
        android:background="#33FFFFFF" />

    <!-- Suggested Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suggested Routes"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:fontFamily="sans-serif"
        android:alpha="0.8" />

    <!-- Routes Container -->
    <LinearLayout
        android:id="@+id/routesContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:weightSum="2"
        android:spacing="12dp">

        <Button
            android:id="@+id/startJourneyButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:text="Go Now"
            android:drawableStart="@drawable/ic_start"
            android:drawablePadding="8dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"/>

        <Button
            android:id="@+id/saveJourneyButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:text="Save Route"
            android:drawableStart="@drawable/ic_save"
            android:drawablePadding="8dp"
            android:backgroundTint="@color/brown"
            android:textColor="@color/white"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>
</LinearLayout>
