<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- User Name -->
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claire"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="48dp"/>

        <!-- Top Cards Group -->
        <LinearLayout
            android:id="@+id/topCardGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">
            <!-- Add top cards here -->
        </LinearLayout>

        <!-- Menu List -->
        <LinearLayout
            android:id="@+id/menuList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp"
            android:divider="@android:color/transparent"
            android:showDividers="none"
            android:spacing="8dp">

            <!-- Change Password -->
            <LinearLayout
                android:id="@+id/changePasswordRow"
                style="@style/GlassMenuRow"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lock"
                    android:tint="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Change Password"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="#000000"/>
            </LinearLayout>

            <!-- Notifications -->
            <LinearLayout
                android:id="@+id/notificationsRow"
                style="@style/GlassMenuRow"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bell"
                    android:tint="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Notifications"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="80dp"
                    android:minHeight="56dp"
                    android:text=""
                    app:thumbTint="#AA9D96"
                    app:trackTint="#000000"/>
            </LinearLayout>

            <!-- About Us -->
            <LinearLayout
                android:id="@+id/aboutUsRow"
                style="@style/GlassMenuRow"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_group"
                    android:tint="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="About Us"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="#000000"/>
            </LinearLayout>

            <!-- FAQ -->
            <LinearLayout
                android:id="@+id/faqRow"
                style="@style/GlassMenuRow"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_about_us"
                    android:tint="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="FAQ"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="#000000"/>
            </LinearLayout>

            <!-- Feedback -->
            <LinearLayout
                android:id="@+id/feedbackRow"
                style="@style/GlassMenuRow"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_feedback"
                    android:tint="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Feedback"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="#000000"/>
            </LinearLayout>

            <!-- Logout -->
            <LinearLayout
                android:id="@+id/logoutRow"
                style="@style/GlassMenuRow"
                android:clickable="true"
                android:focusable="true">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_logout"
                    android:tint="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Logout"
                    android:textColor="#000000"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="#000000"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
