<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="8dp"
        android:background="@drawable/rounded_nav_card"
        android:elevation="4dp"
        android:orientation="vertical">

        <!-- Your nav bar RelativeLayout inside card -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <!-- Linear for 4 navigate button -->
            <LinearLayout
                android:id="@+id/navBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <!-- btnHome -->
                <LinearLayout
                    android:id="@+id/btnHome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iconHome"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_home" />
                    <TextView
                        android:id="@+id/textHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- btnAssistant -->
                <LinearLayout
                    android:id="@+id/btnAssistant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iconAssistant"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_assistant" />
                    <TextView
                        android:id="@+id/textAssistant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Assistant"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- btnSchedules -->
                <LinearLayout
                    android:id="@+id/btnSchedules"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iconSchedules"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_schedule" />
                    <TextView
                        android:id="@+id/textSchedules"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Schedules"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- btnMenu -->
                <LinearLayout
                    android:id="@+id/btnMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/iconMenu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_menu" />
                    <TextView
                        android:id="@+id/textMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Menu"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <!-- Mic -->
    <ImageView
        android:id="@+id/btnMic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="-30dp"
        android:background="@drawable/bg_circle_orange"
        android:src="@drawable/ic_mic"
        android:padding="12dp"
        android:elevation="8dp" />
</FrameLayout>
