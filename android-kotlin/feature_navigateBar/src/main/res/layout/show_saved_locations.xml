<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/editroutebg">

    <ImageView
        android:id="@+id/saved_routes_img1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/outline_location_on_24"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/LocationPageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved Locations"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saved_routes_img1" />

    <TextView
        android:id="@+id/manageLocations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage your saved locations here"
        android:textSize="15sp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/LocationPageTitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/activeLocations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Active Locations:"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/manageLocations"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addLocationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Add a Location"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#944C24"
        app:layout_constraintTop_toBottomOf="@+id/manageLocations"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/activeLocationNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/manageLocations"
        app:layout_constraintStart_toEndOf="@+id/activeLocations" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/LocationRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activeLocationNumber"/>

</androidx.constraintlayout.widget.ConstraintLayout>