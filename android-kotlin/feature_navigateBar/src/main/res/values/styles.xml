<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyledInput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginHorizontal">0dp</item>
        <item name="android:background">@drawable/rounded_brown_bg</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#DDDDDD</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>
    <style name="RoundedCard" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearanceOverlay">@style/RoundedCorners</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
</resources>