<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Trip Route -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_navigation"
                android:layout_marginEnd="8dp"
                app:tint="@color/direction_right" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_start_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kent Ridge MRT Station"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Kent Ridge MRT" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_forward"
                    android:layout_marginHorizontal="8dp"
                    app:tint="@color/half_black" />

                <TextView
                    android:id="@+id/tv_end_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="NUS Computing"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAlignment="textEnd"
                    tools:text="NUS Computing" />

            </LinearLayout>

        </LinearLayout>

        <!-- Trip Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Date and Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_trip_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dec 15, 2024"
                    android:textColor="@color/half_black"
                    android:textSize="12sp"
                    tools:text="Dec 15, 2024" />

                <TextView
                    android:id="@+id/tv_trip_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2:30 PM - 3:15 PM"
                    android:textColor="@color/half_black"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    tools:text="2:30 PM - 3:15 PM" />

            </LinearLayout>

            <!-- Duration -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/input_bg"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_schedule"
                    android:layout_marginEnd="4dp"
                    app:tint="@color/direction_right" />

                <TextView
                    android:id="@+id/tv_trip_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45 min"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="45 min" />

            </LinearLayout>

        </LinearLayout>

        <!-- Route Summary -->
        <TextView
            android:id="@+id/tv_route_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Walk • Bus 95 • Walk"
            android:textColor="@color/half_black"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Walk • Bus 95 • Walk" />

    </LinearLayout>

</androidx.cardview.widget.CardView>