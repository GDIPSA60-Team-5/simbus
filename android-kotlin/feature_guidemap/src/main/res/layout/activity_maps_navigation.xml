<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Google Map Fragment -->
    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Start Button Overlay -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_start_navigation"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="240dp"
        android:backgroundTint="@android:color/black"
        android:text="START"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:cornerRadius="24dp"
        android:visibility="visible" />

    <!-- Zoom Controls -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <!-- Zoom In Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_zoom_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="@color/white"
            app:fabSize="mini"
            app:tint="@android:color/black" />

        <!-- Zoom Out Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_zoom_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_revert"
            app:backgroundTint="@color/white"
            app:fabSize="mini"
            app:tint="@android:color/black" />

    </LinearLayout>

    <!-- Bottom ViewPager for Leg Instructions -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_gravity="bottom"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ViewPager for leg instructions -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_leg_instructions"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Page indicators -->
            <LinearLayout
                android:id="@+id/ll_page_indicators"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>