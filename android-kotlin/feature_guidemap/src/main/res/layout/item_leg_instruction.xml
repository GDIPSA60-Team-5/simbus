<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Main instruction -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/iv_transport_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/direction_icon_background"
            android:backgroundTint="@color/direction_straight"
            android:padding="6dp"
            android:src="@drawable/ic_walk"
            app:tint="@android:color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_leg_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Walk to AYER RAJAH IND EST"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_leg_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="2 min â€¢ 140m"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bus arrival info (only for bus stops) -->
    <LinearLayout
        android:id="@+id/ll_bus_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_nav_card"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcoming buses"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- Main bus -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bus_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_circle_orange"
                android:gravity="center"
                android:minWidth="32dp"
                android:minHeight="32dp"
                android:text="200"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_bus_arrival"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 min"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_bus_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="to Boon Lay Interchange"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Alternative buses -->
        <LinearLayout
            android:id="@+id/ll_alternative_buses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alternatives: 199 (5 min), 97 (8 min)"
                android:textColor="@color/text_secondary"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Stop details (for transit stops) -->
    <LinearLayout
        android:id="@+id/ll_stop_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_stop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AYER RAJAH IND EST"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_stop_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop: 18129"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>