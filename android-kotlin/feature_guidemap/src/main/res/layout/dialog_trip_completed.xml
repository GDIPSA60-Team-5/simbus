<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/route_card_bg">

    <!-- Completion Icon -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_navigation"
        android:layout_marginBottom="16dp"
        android:tint="@color/direction_right" />

    <!-- Completion Message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You've completed a trip!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Sub message -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Great job! Your journey has been completed successfully."
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Back to Home Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back_to_home"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Back to Home"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:backgroundTint="@color/direction_right"
        android:layout_gravity="center" />

</LinearLayout>