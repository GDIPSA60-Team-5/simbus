<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state (50% white) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- 80 = 50% alpha -->
            <corners android:radius="8dp" />    <!-- match your original radius -->
        </shape>
    </item>

    <!-- Default state (20% white) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF" /> <!-- 33 = 20% alpha -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>