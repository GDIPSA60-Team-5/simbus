<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/editroutebg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/RoutePageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Route"
        android:textSize="30dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/FromText"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:text="From:"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/RoutePageTitle"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@id/FromText"
        app:layout_constraintTop_toBottomOf="@id/RoutePageTitle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/FromEdit"
            android:layout_width="200dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:inputType="none"
            >

        </AutoCompleteTextView>
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/ToText"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="15dp"
        android:text="To:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FromText" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@id/ToText"
        app:layout_constraintTop_toBottomOf="@id/FromText"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/ToEdit"
            android:layout_width="200dp"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/BusStopText"
        android:layout_width="70dp"
        android:layout_height="20dp"
        android:text="Bus Stop:"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ToText"
        />
    <EditText
        android:id="@+id/BusStopEdit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:cursorVisible="false"
        android:inputType="none"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@id/BusStopText"
        app:layout_constraintTop_toBottomOf="@id/ToText"
        />

    <Button
        android:id="@+id/BusStopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Bus Stop"
        android:layout_marginTop="25dp"
        android:backgroundTint="#5F3A15"
        app:layout_constraintTop_toBottomOf="@id/ToText"
        app:layout_constraintStart_toEndOf="@id/BusStopEdit"
        />


    <TextView
        android:id="@+id/BusServiceText"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="Bus Service:"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BusStopText"
        />
    <EditText
        android:id="@+id/BusServiceEdit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:cursorVisible="false"
        android:inputType="none"
        app:layout_constraintStart_toEndOf="@+id/BusServiceText"
        app:layout_constraintTop_toBottomOf="@+id/BusStopText"
        />
    <Button
        android:id="@+id/BusServiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Bus Service"
        android:layout_marginTop="19dp"
        android:backgroundTint="#5F3A15"
        app:layout_constraintStart_toEndOf="@id/BusServiceEdit"
        app:layout_constraintTop_toBottomOf="@id/BusStopText"
        />


    <TextView
        android:id="@+id/StartTimeText"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="Start at:"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BusServiceText"
        />
    <EditText
        android:id="@+id/StartTimeEdit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"
        app:layout_constraintStart_toEndOf="@id/StartTimeText"
        app:layout_constraintTop_toBottomOf="@id/BusServiceText"
        />

    <TextView
        android:id="@+id/ArrivalTimeText"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="Arrive at: "
        android:layout_marginTop="36dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/StartTimeText"
        />
    <EditText
        android:id="@+id/ArrivalTimeEdit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"
        app:layout_constraintStart_toEndOf="@id/ArrivalTimeText"
        app:layout_constraintTop_toBottomOf="@id/StartTimeText"
        />

    <TextView
        android:id="@+id/NotifText"
        android:layout_width="190dp"
        android:layout_height="20dp"
        android:text="Number of notifications sent:"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ArrivalTimeText"/>

    <EditText
        android:id="@+id/NotfiEdit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:focusable="false"
        android:clickable="true"
        android:inputType="none"
        app:layout_constraintStart_toEndOf="@id/NotifText"
        app:layout_constraintTop_toBottomOf="@+id/ArrivalTimeText"/>

    <TextView
        android:id="@+id/notifupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:visibility="gone"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/NotifText"
        app:layout_constraintStart_toStartOf="parent"/>



    <TextView
        android:id="@+id/DaysFrequencyText"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Days:"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/NotifText"
        app:layout_constraintStart_toStartOf="parent"
        >
    </TextView>

    <LinearLayout
        android:id="@+id/FrequencyLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/DaysFrequencyText">

        <CheckBox
            android:id="@+id/MonCheck"
            android:text="M"
            style="@style/DayToggle"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            />
        <CheckBox
            android:id="@+id/TuesCheck"
            android:text="T"
            style = "@style/DayToggle"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            />
        <CheckBox
            android:id="@+id/WedCheck"
            android:text="W"
            style = "@style/DayToggle"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            />
        <CheckBox
            android:id="@+id/ThursCheck"
            android:text="T"
            style = "@style/DayToggle"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            />
        <CheckBox
            android:id="@+id/FriCheck"
            android:text="F"
            style = "@style/DayToggle"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            />
        <CheckBox
            android:id="@+id/SatCheck"
            android:text="S"
            style = "@style/DayToggle"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            />
        <CheckBox
            android:id="@+id/SunCheck"
            android:text="S"
            style = "@style/DayToggle"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/frequencyError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="gone"
        android:text="Please select at least one day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FrequencyLayout"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/centerGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/RouteCancelButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:fabCustomSize="80dp"
        app:maxImageSize="64dp"
        app:srcCompat="@drawable/outline_close_24"
        app:tint="@android:color/white"
        app:backgroundTint="@android:color/black"
        app:layout_constraintEnd_toStartOf="@id/centerGuideline"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="50dp"
        app:shapeAppearanceOverlay="@style/CircleShape"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/RouteSaveButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:fabCustomSize="80dp"
        app:maxImageSize="64dp"
        app:srcCompat="@drawable/outline_check_24"
        app:tint="@android:color/white"
        app:backgroundTint="#C4713C"
        app:layout_constraintStart_toEndOf="@id/centerGuideline"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="50dp"
        app:shapeAppearanceOverlay="@style/CircleShape"/>



</androidx.constraintlayout.widget.ConstraintLayout>