<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/editroutebg">

    <Button
        android:id="@+id/sgBusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sg Bus Stops"
        android:backgroundTint="#5F3A15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nusBusButton"
        />
    <Button
        android:id="@+id/nusBusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nus Bus Stops"
        android:backgroundTint="#5F3A15"
        app:layout_constraintStart_toEndOf="@+id/sgBusButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>